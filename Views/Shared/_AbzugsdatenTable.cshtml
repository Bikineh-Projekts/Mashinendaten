@using MaschinenDataein.Helper
@using MaschinenDataein.Models.ModelView
@using MaschinenDataein.Models.PaginatedModel

@{
    bool IsShowId = Convert.ToBoolean(ViewData["IsShowId"]);
    PaginatedListItem paginatedListItem = ViewData["PaginatedListItem"] as PaginatedListItem;

}

@model List<AbzugsdatenModelView>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-striped table-hover shadow">
        <thead class="table-dark">
            <tr>
                @if (IsShowId)
                {
                    <th>ID</th>
                }
                
                <th>Zeitstempel</th>
                <th>Maschine</th>
                <th>PR-Name</th>
                <th>Packungen pro Abzug</th>
                <th>Abzuglänge</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var AbzugsDaten in Model)
            {
                <tr>
                    @if(IsShowId){
                        <td>@AbzugsDaten.Id</td>
                    }
                    <td>@AbzugsDaten.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@AbzugsDaten.Maschine</td>
                    <td>@AbzugsDaten.Name</td>
                    <td>@AbzugsDaten.PackungenproAbzug Stück</td>
                    <td>@(AbzugsDaten.Abzuglaenge / 10.0) mm</td>
                </tr>
            }
        </tbody>
    </table>
    @if (paginatedListItem != null)
    {
        @await Html.PartialAsync("_PaginatedItem", paginatedListItem)
    }
}
else
{
    <div class="alert alert-info text-center">
        <strong>ℹ️ Bitte setzen Sie einen Filter, um die Abzugsdaten anzuzeigen.</strong>
    </div>
}