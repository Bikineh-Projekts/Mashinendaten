@model PaginatedListItem
@if (Model != null)
{
    <div class="d-flex justify-content-between mt-3">
        <a class="btn btn-primary @(!Model.IsFirstPage ? "" : "disabled")" asp-action="@Model.FunctionName"  asp-route-pageNumber="@(Model.PageNumber - 1)">
            Zurück
        </a>

        <span class="align-self-center">Seite @Model.PageNumber von @Model.PageCount</span>

        <a class="btn btn-primary @(!Model.IsLastPage ? "" : "disabled")"
           asp-action="@Model.FunctionName"
           asp-route-pageNumber="@(Model.PageNumber + 1)">
                    Weiter
                </a>
    </div>
}